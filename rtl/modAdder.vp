module `mname` (
input logic [7:0] a,
input logic [7:0] b,
input logic clk,
input logic rst,
output logic [7:0] sum
);

logic [3:0] a_lsb;
logic [3:0] b_lsb;
logic [3:0] a_msb;
logic [3:0] b_msb;
logic [3:0] a_msb_s1;
logic [3:0] b_msb_s1;
logic [3:0] sum_lsb;
logic [3:0] sum_lsb_s1;
logic [3:0] sum_msb;
logic carry_nxt;
logic carry;

assign {carry_nxt, sum_lsb[3:0]} = a_lsb[3:0] + b_lsb[3:0];
assign sum_msb[3:0] = a_msb_s1[3:0] + b_msb_s1[3:0] + {3'b0, carry};

